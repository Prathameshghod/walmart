generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id        Int          @id @default(autoincrement())
  name      String
  email     String       @unique
  status    Status       @default(AVAILABLE)
  latitude  Float
  longitude Float
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Named relations
  requests  HelpRequest[] @relation("DriverRequests")
  helps     HelpRequest[] @relation("DriverHelps")
}

model HelpRequest {
  id          Int         @id @default(autoincrement())
  requesterId Int
  helperId    Int?
  issue       String
  status      HelpStatus  @default(PENDING)
  latitude    Float
  longitude   Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  description String?
  requester   Driver      @relation("DriverRequests", fields: [requesterId], references: [id])
  helper      Driver?     @relation("DriverHelps", fields: [helperId], references: [id])
}

enum Status {
  AVAILABLE
  BUSY
  HELPING
}

enum HelpStatus {
  PENDING
  ACCEPTED
  RESOLVED
}
